<% if logged_in? %>
  <h1>タスク一覧</h1>
  <ul>
    <% @tasklists.each do |tasklist| %>
      <li><%= link_to tasklist.id, tasklist %> :  <%= tasklist.status %> > <%= tasklist.content %></li>
    <% end %>
  </ul>
  <%= link_to '新規タスクの投稿', new_tasklist_path, class: "btn btn-primary" %>
  
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Tasklists</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>